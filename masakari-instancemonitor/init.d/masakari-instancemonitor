# Source function library.
. /lib/lsb/init-functions

PROGNAME=masakari-instancemonitor
PROG_DIR=/opt/masakari/instancemonitor
PROG=$PROG_DIR/masakari_instancemonitor.py
PIDFILE=/var/run/masakari-instancemonitor.pid
PYTHON=/usr/bin/python
USER=openstack

start() {
        [ -x $PROG ] || exit 1

        # Start daemons.
        echo -n $"Starting $PROGNAME: "
        start-stop-daemon --start --pidfile $PIDFILE --chuid $USER --make-pidfile --background --exec $PYTHON  -- -u $PROG > /dev/null 2>&1
        RETVAL=$?
        [ "$RETVAL" -eq 0 ] && log_success_msg || log_failure_msg
        return $RETVAL
}

stop() {
        echo -n $"Shutting down $PROGNAME: "
        start-stop-daemon --stop --pidfile $PIDFILE > /dev/null 2>&1
        RETVAL=$?
        [ "$RETVAL" -eq 0 ] && log_success_msg || log_failure_msg
        [ -f $PIDFILE ] && sudo rm $PIDFILE
        return $RETVAL
}


# See how we were called.
case "$1" in
  start)
        start
        exit $RETVAL
        ;;
  stop)
        stop
        exit $RETVAL
        ;;
  status)
        status_of_proc -p "$PIDFILE" $PYTHON $PROGNAME && exit 0 || exit $?
        ;;
  restart)
        stop
        start
        ;;
  *)
        echo $"Usage: $0 {start|stop|status|restart}"
        exit 2
esac

exit 0
